# .editorconfig
# Top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown — keep trailing spaces for line breaks
[*.md]
trim_trailing_whitespace = false

# JSON, YAML — use 2 spaces for readability
[*.{json,yml,yaml}]
indent_size = 2

# C++ source & header files
[*.{c,cc,cpp,cxx,h,h++,hh,hpp,hxx,inl,ipp,tlh,tli}]
indent_size = 4
indent_style = space
# Visual Studio-specific brace placement
cpp_new_line_before_open_brace_control_block = same_line
cpp_new_line_before_open_brace_function = same_line
cpp_new_line_before_open_brace_namespace = same_line
cpp_new_line_before_open_brace_lambda = same_line
cpp_new_line_before_open_brace_type = same_line

# CMake files
[CMakeLists.txt]
indent_size = 2
indent_style = space
